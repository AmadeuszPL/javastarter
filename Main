package com.company;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
		double x, y;
		char sign;
		String ver, tak = "TAK";
		int cer;
		// definicja zmiennych
		Scanner wprowadz = new Scanner(System.in);
		System.out.println("Witamy w naszym kalkulatorze");
		do {
			System.out.println("Wprowadź pierwszą cyfrę");
			x = wprowadz.nextDouble();
			do {
				System.out.println("Wprowadź symbol działania +, -, *, /");
				sign = wprowadz.next().charAt(0);
				System.out.println("Wprowadź kolejną cyfrę");
				y = wprowadz.nextDouble();
				switch (sign) {
					case '+':
						System.out.println(x + y);
						x += y;
						break;
					case '-':
						System.out.println(x - y);
						x -= y;
						break;
					case '*':
						System.out.println(x * y);
						x *= y;
						break;
					case '/':
						if (y == 0) {
							System.out.println("Nie można dzielić przez zero spróbuj wybrać inny dzielnik");
						} else {
							System.out.println(x / y);
							x /= y;
						}
						break;
				}
				System.out.println("Jeśli chcesz wykonać kolejne działanie wprowadź TAK");
				ver = wprowadz.nextLine();
			}
			while (ver.equals(tak));
			System.out.println("Jeśli chcesz zaczac od poczatku wprowadź TAK");
			ver = wprowadz.nextLine();
		}
		while (ver.equals(tak));
	}
	}
